table inet filter {

    # Lascia passare (accept) tutti i pacchetti con sorgente 10.1.1.1
    # destinazione 10.3.3.1, che escono dall'interfaccia eth1 con protocollo
    # tcp verso la porta 22

  chain FORWARD {
    type filter hook forward priority 0; # policy drop; di default li blocca
    ip saddr 10.1.1.1 ip daddr 10.3.3.1 tcp dport 22 accept
    ip daddr 10.1.1.1 ip saddr 10.3.3.1 tcp sport 22 ct state established accept
  }
}
